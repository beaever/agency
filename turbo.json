{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build:package": {
      "dependsOn": ["@agency/shared#build", "@agency/components"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "tsc": {
      "dependsOn": ["@agency/shared#build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "main:build": {
      "dependsOn": ["tsc", "build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
