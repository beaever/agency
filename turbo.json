{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dependsOn": ["^dev", "^start"],
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "dependsOn": ["^storybook"],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["^deploy"]
    }
  }
}
