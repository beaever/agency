{
  "name": "agency",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:design-system": "pnpm exec turbo build --filter=@itsm/design-system",
    "build:shared": "pnpm exec turbo build --filter=@itsm/shared",
    "build:components": "pnpm exec turbo build --filter=@itsm/components",
    "build:theme": "pnpm exec turbo build --filter=@itsm/theme",
    "prepare": "husky install",
    "storybook": "turbo storybook",
    "graph": "turbo run build lint --graph=graph.png"
  },
  "devDependencies": {
    "@agency/eslint-config": "workspace:*",
    "@agency/typescript-config": "workspace:*",
    "husky": "^8.0.3",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  }
}
