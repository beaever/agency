{
  "name": "agency",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:portfolio": "turbo build --filter=@agency/portfolio",
    "build:components": "turbo build --filter=@agency/components",
    "build:theme": "turbo build --filter=@agency/theme",
    "dev": "turbo dev",
    "dev:portfolio": "turbo dev --filter=@agency/portfolio",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "workspace": "turbo gen workspace",
    "storybook": "turbo storybook --filter=@agency/design-system"
  },
  "devDependencies": {
    "@agency/eslint-config": "workspace:*",
    "@agency/typescript-config": "workspace:*",
    "husky": "^8.0.3",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@9.0.6",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9.x"
  },
  "dependencies": {
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  }
}
